<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_fromArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="From Array"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_just"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Just"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btn_fromArray"
        app:layout_constraintStart_toStartOf="@+id/btn_fromArray"
        app:layout_constraintTop_toBottomOf="@+id/btn_fromArray" />

    <Button
        android:id="@+id/btn_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="InTerval"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btn_just"
        app:layout_constraintStart_toStartOf="@+id/btn_just"
        app:layout_constraintTop_toBottomOf="@+id/btn_just" />

    <Button
        android:id="@+id/btn_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Range"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btn_interval"
        app:layout_constraintStart_toStartOf="@+id/btn_interval"
        app:layout_constraintTop_toBottomOf="@+id/btn_interval" />

    <Button
        android:id="@+id/btn_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Repeat"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btn_range"
        app:layout_constraintStart_toStartOf="@+id/btn_range"
        app:layout_constraintTop_toBottomOf="@+id/btn_range" />

    <Button
        android:id="@+id/btn_defer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Defer"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btn_repeat"
        app:layout_constraintStart_toStartOf="@+id/btn_repeat"
        app:layout_constraintTop_toBottomOf="@+id/btn_repeat" />
</androidx.constraintlayout.widget.ConstraintLayout>